<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent">
        <Button android:id="@+id/Connect_b"
            android:layout_width="205px"
            android:layout_height="50px"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"
            android:text="Connect"/> 
        <Button android:id="@+id/Reload_b"
            android:layout_width="205px"
            android:layout_height="50px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="2px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Connect_b"
            android:text="Reload config"/> 
        <Button android:id="@+id/Side_b"
            android:layout_width="205px"
            android:layout_height="50px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="2px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Reload_b"
            android:text="Change side"/> 
        <TextView android:id="@+id/config_status_t"
            android:layout_width="205px"
            android:layout_height="50px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="2px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Side_b"/> 
            
